{# templates/admin/user/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block partial %}
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> {{ user.id ? 'Edit User' : 'Create User' }} </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Users</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ user.id ? 'Edit User' : 'Create User' }}</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ user.id ? 'Edit User' : 'Create User' }}</h4>
                        <p class="card-description"> {{ user.id ? 'Edit user details' : 'Create a new user' }} </p>
                        {{ form_start(form, {'action': path('edit', {'id': user.id}), 'attr': {'class': 'forms-sample'}}) }}
                        <div class="form-group">
                            {{ form_label(form.username, 'Username', {'label_attr': {'for': 'username'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'id': 'username'}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email, 'Email', {'label_attr': {'for': 'email'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.roles, 'Roles', {'label_attr': {'for': 'roles'}}) }}
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control', 'id': 'roles'}}) }}
                            {{ form_errors(form.roles) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword, 'Password', {'label_attr': {'for': 'plainPassword'}}) }}
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'id': 'plainPassword'}}) }}
                            {{ form_errors(form.plainPassword) }}
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">{{ user.id ? 'Update' : 'Create' }}</button>
                        <a href="{{ path('index') }}" class="btn btn-dark">Cancel</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Profile Pictures</h4>
                        <p class="card-description"> Browse some example profile pictures. </p>
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="{{ asset('assets/images/dashboard/profile1.jpg') }}" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="{{ asset('assets/images/dashboard/profile2.jpg') }}" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="{{ asset('assets/images/dashboard/profile3.jpg') }}" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

